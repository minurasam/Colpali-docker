{
	"info": {
		"_postman_id": "colpali-api-collection",
		"name": "ColPali Document Embedding API",
		"description": "API for ingesting PDF and image files and storing embeddings in Qdrant",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Check if the API and all dependencies are healthy"
			},
			"response": []
		},
		{
			"name": "Get Statistics",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/stats",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"stats"
					]
				},
				"description": "Get collection statistics from Qdrant"
			},
			"response": []
		},
		{
			"name": "List Documents",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/documents",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"documents"
					]
				},
				"description": "List all ingested documents"
			},
			"response": []
		},
		{
			"name": "Ingest PDF",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": []
						},
						{
							"key": "document_id",
							"value": "",
							"description": "Optional: Custom document ID (leave empty for auto-generation)",
							"type": "text",
							"disabled": true
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/ingest/pdf",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"ingest",
						"pdf"
					]
				},
				"description": "Upload and process a PDF document"
			},
			"response": []
		},
		{
			"name": "Ingest Image",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": []
						},
						{
							"key": "document_id",
							"value": "",
							"description": "Optional: Custom document ID (leave empty for auto-generation)",
							"type": "text",
							"disabled": true
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/ingest/image",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"ingest",
						"image"
					]
				},
				"description": "Upload and process an image file (PNG, JPG, JPEG, BMP, TIFF, WEBP)"
			},
			"response": []
		},
		{
			"name": "Delete Document",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/document/{{document_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"document",
						"{{document_id}}"
					]
				},
				"description": "Delete a specific document and all its embeddings"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "document_id",
			"value": "",
			"type": "string"
		}
	]
}
